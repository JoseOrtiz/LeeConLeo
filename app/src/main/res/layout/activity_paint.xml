<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.cc6909.ebm.leeconleo.letters.PaintActivity">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <ImageView
            android:contentDescription="@string/back"
            android:id="@+id/back_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_gravity="start" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <cl.cc6909.ebm.leeconleo.letters.PaintView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/paint_surface"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:id="@+id/palette"> 
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#FF0000"
            android:onClick="setColor"
            android:layout_alignParentTop="true"
            android:id="@+id/red_palette"/>
        <Button
            android:id="@+id/yellow_palette"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#FFFF00"
            android:onClick="setColor"
            android:layout_toRightOf="@+id/red_palette"
            android:layout_toEndOf="@+id/red_palette"/>
        <Button
            android:id="@+id/green_palette"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#00FF00"
            android:onClick="setColor"
            android:layout_toRightOf="@+id/yellow_palette"
            android:layout_toEndOf="@+id/yellow_palette"/>
        <Button
            android:id="@+id/cyan_palette"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#00FFFF"
            android:onClick="setColor"
            android:layout_toRightOf="@+id/green_palette"
            android:layout_toEndOf="@+id/green_palette"/>
        <Button
            android:id="@+id/blue_palette"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#0000FF"
            android:onClick="setColor"
            android:layout_toRightOf="@+id/cyan_palette"
            android:layout_toEndOf="@+id/cyan_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#FF00FF"
            android:onClick="setColor"
            android:layout_toRightOf="@+id/blue_palette"
            android:layout_toEndOf="@+id/blue_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#800000"
            android:onClick="setColor"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#808000"
            android:onClick="setColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/red_palette"
            android:layout_toEndOf="@+id/red_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#008000"
            android:onClick="setColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/yellow_palette"
            android:layout_toEndOf="@+id/yellow_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#008080"
            android:onClick="setColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/green_palette"
            android:layout_toEndOf="@+id/green_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#000080"
            android:onClick="setColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cyan_palette"
            android:layout_toEndOf="@+id/cyan_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#800080"
            android:onClick="setColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/blue_palette"
            android:layout_toEndOf="@+id/blue_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#FFFFFF"
            android:onClick="setColor"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#C0C0C0"
            android:onClick="setColor"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/red_palette"
            android:layout_toEndOf="@+id/red_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#808080"
            android:onClick="setColor"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/yellow_palette"
            android:layout_toEndOf="@+id/yellow_palette"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_button"
            android:tag="#000000"
            android:onClick="setColor"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/green_palette"
            android:layout_toEndOf="@+id/green_palette"/>
        <Button
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:tag="#FFFFFF"
            android:onClick="setEraser"
            android:background="@drawable/eraser"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/cyan_palette"
            android:layout_toEndOf="@+id/cyan_palette"
            />

    </RelativeLayout>

</LinearLayout>
