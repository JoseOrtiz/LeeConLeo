<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="cl.cc6909.ebm.leeconleo.letters.RecognitionActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="@string/back"
            android:id="@+id/back_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_gravity="start"
            android:onClick="onBackButtonClicked"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <cl.cc6909.ebm.leeconleo.letters.AutoResizeTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="300sp"
                android:text="="
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/equal_sign"/>
            <cl.cc6909.ebm.leeconleo.letters.AutoResizeTextView
                android:id="@+id/printed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="a"
                android:textSize="300sp"
                android:gravity="center"
                android:layout_toLeftOf="@id/equal_sign"
                android:includeFontPadding="false"
                />
            <cl.cc6909.ebm.leeconleo.letters.AutoResizeTextView
                android:id="@+id/written"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="a"
                android:textSize="300sp"
                android:gravity="center"
                android:layout_toRightOf="@id/equal_sign"
                android:includeFontPadding="false"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wrap_surface"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal">
            <cl.cc6909.ebm.leeconleo.letters.FontFitTextView
                android:id="@+id/wrap_1"
                android:layout_height="400dp"
                android:layout_width="fill_parent"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:ellipsize="none"
                android:layout_alignParentTop="true"
                android:text="Gato"
                android:textSize="200sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>
            <cl.cc6909.ebm.leeconleo.letters.FontFitTextView
                android:id="@+id/wrap_2"
                android:layout_height="400dp"
                android:layout_width="fill_parent"
                android:gravity="start|center_vertical"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:ellipsize="none"
                android:textSize="200sp"
                android:text="Paralelepipedo"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>
            <cl.cc6909.ebm.leeconleo.letters.WrapView
                android:id="@+id/wrap_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>