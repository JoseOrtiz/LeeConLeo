<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.cc6909.ebm.leeconleo" >

    <uses-sdk
        android:maxSdkVersion="20"
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <supports-screens
        android:largeScreens="false"
        android:normalScreens="false"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <compatible-screens>
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="xlarge" />
        <screen
            android:screenDensity="ldpi"
            android:screenSize="xlarge" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="xlarge" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="xlarge" />
    </compatible-screens>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameMapActivity"
            android:label="@string/title_activity_game_map"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cl.cc6909.ebm.leeconleo.MenuActivity" />
        </activity>
        <activity
            android:name=".VerticalActivity"
            android:label="@string/title_activity_verticality"
            android:parentActivityName=".GameMapActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cl.cc6909.ebm.leeconleo.GameMapActivity" />
        </activity>
    </application>

</manifest>
